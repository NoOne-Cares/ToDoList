<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tom DO List</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="heading">
        <h1 class="title"> <%= NameOfDay %> </h1>
    </div>
    <div>
        <form action="/delete" method="post" class="list">
       <% newlistitems.forEach(function(item){%>
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=item.id%>" onchange="this.form.submit()">
                <p class="content"><%= item.name%></p>
            </div>
        <%})%>
        </form>

    </div>
    <form action="/" method="post" id="sum">
        <input id="input" type="text" name="newItem" autocomplete="off" placeholder="ADD TASK">
        <button id="submit" type="submit">+ </button>
    </form>
    
</body>
</html>